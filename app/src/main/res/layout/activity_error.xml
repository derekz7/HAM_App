<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_bg_gray"
    tools:context=".activities.ErrorActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/cloud"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="26dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ufo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ohh..SH*T"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#3c394b"
            android:layout_marginTop="60dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/grey"
            android:gravity="center"
            android:text="Looks like someone has\nstolen your router"/>

        <Button
            android:id="@+id/btn_tryAgain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Try Again"
            android:textAllCaps="false"
            android:background="@drawable/rounded_background_white"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

</FrameLayout>